{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules"],
    "verbose": true,
    "execMap": {
        "ts": "node --require ts-node/register"
    },
    "watch": ["src/"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts",
    "events": {
        "//comment": "clearing console after restart",
        "start": "node -e \"process.stdout.write('\\x1Bc');\""
    }
}